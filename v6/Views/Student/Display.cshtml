@model List<v6.Models.StudentModel>
@{
    ViewData["Title"] = "Display";
}

<h1>Display</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th> </th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var student in Model)
        {
            <tr>
                <th>@student.Id</th>
                <td>@student.Name</td>
                <td>@student.Address</td>
                <td> <a asp-controller="Student" asp-action="ViewStudent" asp-route-id="@student.Id">View</a></td>
            </tr>
        }

    </tbody>
</table>

